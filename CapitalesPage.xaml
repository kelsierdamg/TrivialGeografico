<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrivialGeografico.CapitalesPage"
             Title="Capitales">
    <Grid>
        <Image
            Source="cuatrotorres.jpg"
            Aspect="AspectFill"
            Opacity="0.7" />
        <VerticalStackLayout>
            <Label 
            x:Name="preguntaLabel"
            TextColor="Black"
            FontSize="32"
            FontFamily="Consola Italic"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Button x:Name="opcion1" Clicked="OpcionesClicked" HorizontalOptions="Center" FontFamily="Consola" FontSize="20" BackgroundColor="#80FFFFFF" TextColor="Black" BorderColor="Black" BorderWidth="2" />
            <Button x:Name="opcion2" Clicked="OpcionesClicked" HorizontalOptions="Center" FontFamily="Consola" FontSize="20" BackgroundColor="#80FFFFFF" TextColor="Black" BorderColor="Black" BorderWidth="2"/>
            <Button x:Name="opcion3" Clicked="OpcionesClicked" HorizontalOptions="Center" FontFamily="Consola" FontSize="20" BackgroundColor="#80FFFFFF" TextColor="Black" BorderColor="Black" BorderWidth="2"/>
            <Button x:Name="opcion4" Clicked="OpcionesClicked" HorizontalOptions="Center" FontFamily="Consola" FontSize="20" BackgroundColor="#80FFFFFF" TextColor="Black" BorderColor="Black" BorderWidth="2"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>